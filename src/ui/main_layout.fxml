<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.Group?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane fx:controller="ui.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Group fx:id="grid"
        GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="3">
    </Group>
    <GridPane fx:id="palette"
        GridPane.columnIndex="4" GridPane.rowIndex="0">
        <ImageView fx:id="section" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Image url="@images/section.png"/>
        </ImageView>
        <ImageView fx:id="pointForward" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Image url="@images/point_forward.png"/>
        </ImageView>
        <ImageView fx:id="pointBackward" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <Image url="@images/point_backward.png"/>
        </ImageView>
    </GridPane>
</GridPane>