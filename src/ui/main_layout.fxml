<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.ScrollPane?>
<?import ui.utilities.Section?>
<?import ui.utilities.PointForward?>
<?import ui.utilities.PointBackward?>
<GridPane fx:controller="ui.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
    <ScrollPane fx:id="scrollPane">
        <content>
            <Group fx:id="grid"
                GridPane.columnIndex="0" GridPane.rowIndex="0"
                GridPane.columnSpan="3">
            </Group>
        </content>
    </ScrollPane>
    <GridPane fx:id="palette"
        GridPane.columnIndex="4" GridPane.rowIndex="0">
        <Section fx:id="section" GridPane.columnIndex="0" GridPane.rowIndex="0">
        </Section>
        <PointForward fx:id="pointForward" GridPane.columnIndex="0" GridPane.rowIndex="1">
        </PointForward>
        <PointBackward fx:id="pointBackward" GridPane.columnIndex="0" GridPane.rowIndex="2">
        </PointBackward>
    </GridPane>
</GridPane>